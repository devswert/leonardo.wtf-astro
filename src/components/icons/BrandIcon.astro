interface Props {
  icon: string;
  size?: number;
  asSticker?: boolean;
}

const { icon, size = 100, asSticker = true } = Astro.props;
---

{icon == "go" && <GoIcon size={size} asSticker={asSticker} />}
{icon == "js" && <JSIcon size={size} asSticker={asSticker} />}
{icon == "typescript" && <TypeScriptIcon size={size} asSticker={asSticker} />}
{icon == "python" && <PythonIcon size={size} asSticker={asSticker} />}
{icon == "php" && <PHPIcon size={size} asSticker={asSticker} />}
{icon == "dart" && <DartIcon size={size} asSticker={asSticker} />}
{icon == "laravel" && <LaravelIcon size={size} asSticker={asSticker} />}
{icon == "nestjs" && <NestjsIcon size={size} asSticker={asSticker} />}
{icon == "flutter" && <FlutterIcon size={size} asSticker={asSticker} />}
{icon == "tailwind" && <TailwindIcon size={size} asSticker={asSticker} />}
{icon == "django" && <DjangoIcon size={size} asSticker={asSticker} />}
{icon == "mongo" && <MongoDBIcon size={size} asSticker={asSticker} />}
{icon == "node" && <NodeJsIcon size={size} asSticker={asSticker} />}
{icon == "vue" && <VueIcon size={size} asSticker={asSticker} />}
{icon == "angular" && <AngularIcon size={size} asSticker={asSticker} />}
{icon == "redis" && <RedisIcon size={size} asSticker={asSticker} />}
{icon == "postgresql" && <PostgreSQLIcon size={size} asSticker={asSticker} />}
{icon == "mysql" && <MySQLIcon size={size} asSticker={asSticker} />}
{icon == "kafka" && <KafkaIcon size={size} asSticker={asSticker} />}
{icon == "docker" && <DockerIcon size={size} asSticker={asSticker} />}
{icon == "figma" && <FigmaIcon size={size} asSticker={asSticker} />}
{icon == "k8s" && <KubernetesIcon size={size} asSticker={asSticker} />}
{icon == "aws" && <AWSIcon size={size} asSticker={asSticker} />}
{icon == "nginx" && <NginxIcon size={size} asSticker={asSticker} />}
{icon == "wordpress" && <WordPressIcon size={size} asSticker={asSticker} />}
{icon == "scss" && <SCSSIcon size={size} asSticker={asSticker} />}
{icon == "css" && <CSSIcon size={size} asSticker={asSticker} />}
{icon == "linux" && <LinuxIcon size={size} asSticker={asSticker} />}
{icon == "codeigniter" && <CodeigniterIcon size={size} asSticker={asSticker} />}
{icon == "shopify" && <ShopifyIcon size={size} asSticker={asSticker} />}
{icon == "firebase" && <FirebaseIcon size={size} asSticker={asSticker} />}
{icon == "fastapi" && <FastAPIIcon size={size} asSticker={asSticker} />}
{icon == "supabase" && <SupabaseIcon size={size} asSticker={asSticker} />}
{icon == "react" && <ReactIcon size={size} asSticker={asSticker} />}
{icon == "nextjs" && <NextJSIcon size={size} asSticker={asSticker} />}
{icon == "vercel" && <VercelIcon size={size} asSticker={asSticker} />}
{icon == "astro" && <AstroIcon size={size} asSticker={asSticker} />}

<svg style="width:0;height:0;position:absolute;" aria-hidden="true">
  <defs>
    <filter id="solid-background">
      <!-- Full white background -->
      <feFlood result="white" flood-color="#fdf6ec"></feFlood>

      <!-- Create expanded mask -->
      <feMorphology
        in="SourceAlpha"
        operator="dilate"
        radius="3.5"
        result="expanded"></feMorphology>

      <!-- Clip white background to expanded shape -->
      <feComposite in="white" in2="expanded" operator="in" result="white-border"
      ></feComposite>

      <!-- Gray background -->
      <feFlood result="bg" flood-color="red"></feFlood>
      <feComposite in="bg" in2="SourceAlpha" operator="in" result="bg-shape"
      ></feComposite>

      <!-- Combine all layers -->
      <feMerge>
        <feMergeNode in="white-border"></feMergeNode>
        <feMergeNode in="bg-shape"></feMergeNode>
        <feMergeNode in="SourceGraphic"></feMergeNode>
      </feMerge>
    </filter>
  </defs>
</svg>

<style is:global>
  .sticker-icon {
    display: inline-block;
    filter: url(#solid-background) drop-shadow(0 0 2px rgba(0, 0, 0, 0.2));
    backface-visibility: hidden;
  }
</style>
